@{
}
@model Ticket
<div class="container mt-4 mb-4 p-3 d-flex justify-content-center">
    <div class="card p-4">
        <div class=" image d-flex flex-column justify-content-center align-items-center">
            <a type="button" asp-controller="User" asp-action="Detail" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary">
                @if (Model.Image == null || Model.Image == "")
                {
                    <img src="/Resources/Placeholders/TicketPicturePlaceholder.png" height="200" width="200" />
                }
                else
                {
                    <img src="@Model.Image" height="100" width="100" />
                }

            </a> <span class="name mt-3">#@Model.Id @Model.Title</span> <span class="idd"></span>
            <div class="d-flex flex-row justify-content-center align-items-center gap-2"> <span class="idd1">Status: @Model.Status.ToString()</span> <span><i class="fa fa-copy"></i></span> </div>
            <div class="d-flex flex-row justify-content-center align-items-center mt-3">
                <span class="number">
                    <span class="follow">
                        @if (@Model.ApproximatePrice!=null)
                        {
                            <a>Current price: $@Model.ApproximatePrice</a>

                            <br />
                        }
                        else
                        {
                            <a>Current price: $0</a><br />
                        }
                        @if (Model.PaidPrice!=null)
                        {
                            <a>Paid price: $@Model.PaidPrice</a><br />
                        }
                        else
                        {
                            <a>Paid price: $0</a>

                            <br />
                        }
                        
                            
                    </span>
                </span>
            </div>

            <div class="text mt-3">
                <span>
                    They can always come back...<br>
                    <br> Or do they?
                </span>
            </div>
            <form action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class=" d-flex mt-2"> <button class="btn btn-primary" type="submit">Delete</button> </div>
            </form>
        </div>
    </div>
</div>