@using AutoVadeProMVC.ViewModels;
@model AddTimeSlotTicketViewModel

<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">
                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    <form style="width: 23rem;" method="post" asp-action="AddTimeSlot">

                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Add Time Slot</h3>

                        <div data-mdb-input-init class="form-outline mb-4">
                            <label asp-for="SlotBegining" class="form-label">From</label>
                            <input asp-for="SlotBegining" class="form-control form-control-lg" type="date" placeholder="Enter desired date">
                            
                            <span asp-validation-for="SlotBegining" class="text-danger"></span>

                        </div>
                        <div data-mdb-input-init class="form-outline mb-4">
                            <label asp-for="StartingHour" class="form-label">Starting Hour</label>
                            <input asp-for="StartingHour" class="form-control form-control-lg" type="number" min="8" step="1" max="18" placeholder="Enter desired hour">

                            <span asp-validation-for="StartingHour" class="text-danger"></span>
                        </div>

                        <div data-mdb-input-init class="form-outline mb-4">
                            <label asp-for="SlotEnding" class="form-label">Till</label>
                            <input asp-for="SlotEnding" class="form-control form-control-lg" type="date" placeholder="Enter desired date">

                            <span asp-validation-for="SlotBegining" class="text-danger"></span>
                        </div>
                        <div data-mdb-input-init class="form-outline mb-4">
                            <label asp-for="EndingHour" class="form-label">Ending Hour</label>
                            <input asp-for="EndingHour" class="form-control form-control-lg" type="number" min="8" step="1" max="18" placeholder="Enter desired hour">

                            <span asp-validation-for="EndingHour" class="text-danger"></span>
                        </div>
                        <div class="pt-1 mb-4">
                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-info btn-lg btn-block" type="submit">Add</button>
                            @* <input class="form-control" asp-for="SlotBegining" asp-format="{0:yyyy-MM-ddTHH:mm}" /> *@
                        </div>
                    </form>

                </div>
            </div>
        </div>
</section>

