@{
}
@model List<Ticket>
<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row">
            @foreach (var i in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        @if (i.Image == null | i.Image == "")
                        {
                            <img class="card-img-top" src="/Resources/Placeholders/TicketPicturePlaceholder.png" width="100%" height="100%" alt="Image Placeholder" />
                        }
                        else
                        {
                            <img class="card-img-top" src="@i.Image" width="100%" height="100%" alt="Image Placeholder" />
                        }
                        <div class="card-body">
                            <p class="card-text">@i.Title</p>
                            <p class="card-text">@i.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="button" asp-controller="Ticket" asp-action="Detail" asp-route-id="@i.Id" class="btn btn-sm btn-outline-secondary">View</a>
                                    <a type="button" asp-controller="Ticket" asp-action="Edit" asp-route-id="@i.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    <a type="button" asp-controller="Ticket" asp-action="Delete" asp-route-id="@i.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                                </div>
                                <small class="status-text">
                                    @i.Status.ToString()
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>