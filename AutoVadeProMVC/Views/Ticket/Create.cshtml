@model CreateTicketViewModel

<div class="container-xl px-4 mt-4">
    <form method="post" asp-action="Create" enctype="multipart/form-data">
        <hr class="mt-0 mb-4">
        <div class="row">
            <div class="col-xl-4">
                <!-- Profile picture card-->
                <div class="card mb-4 mb-xl-0">
                    <label asp-for="Image" class="card-header">Car Picture</label>
                    <div class="card-body text-center">
                        <!-- Profile picture image-->
                        <img class="img-ticket-add" width="40%" height="70%" src="/Resources/Placeholders/TicketPicturePlaceholder.png" alt="">
                        <!-- Profile picture help block-->
                        <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                        <!-- Profile picture upload button-->
                        <input asp-for="Image" type="file" class="btn btn-primary"></input>
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-xl-8">
                <!-- Account details card-->
                <div class="card mb-4">
                    <div class="card-header">Ticket Details</div>
                    <div class="card-body">
                        <!-- Form Group (username)-->
                        <div class="mb-3">
                            <label asp-for="Title" class="small mb-1">Title</label>
                            <input asp-for="Title" class="form-control" type="text" placeholder="Enter Ticket's title">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <!-- Form Group (password)-->
                        <div class="mb-3">
                            <label asp-for="Description" class="text-ticket-description">Description</label>
                            <input asp-for="Description" class="form-control" type="text" placeholder="Enter Ticket's Description">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (first name)-->
                            <div class="col-md-6">
                                <label asp-for="Car.Brand" class="small mb-1" for="inputFirstName">Car Brand</label>
                                <input asp-for="Car.Brand" class="form-control" id="inputFirstName" type="text" placeholder="Enter Car's Brand">
                                <span asp-validation-for="Car.Brand" class="text-danger"></span>
                            </div>
                            <!-- Form Group (last name)-->
                            <div class="col-md-6">
                                <label asp-for="Car.Model" class="small mb-1" for="inputLastName">Car Model</label>
                                <input asp-for="Car.Model" class="form-control" id="inputLastName" type="text" placeholder="Enter Car's Model">
                                <span asp-validation-for="Car.Model" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Car.RegistrationId" class="small mb-1" for="inputOrgName">Car Registration Id</label>
                                <input asp-for="Car.RegistrationId" class="form-control" id="inputWage" type="text" placeholder="Enter Car's Registration Id">
                                <span asp-validation-for="Car.RegistrationId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="UserId" class="small mb-1" for="inputLastName">Assigned Employee Id</label>
                                <input asp-for="UserId" class="form-control" id="inputLastName" type="number" placeholder="Enter Employee's Id'">
                                <span asp-validation-for="UserId" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Save changes button-->
                        <button class="btn btn-primary" type="submit">Save changes</button>

                    </div>
                </div>
            </div>
    </form>
</div>
</div>