@{
}
@using AutoVadeProMVC.ViewModels;
@model EditTicketVIewModel


<div class="container-xl px-4 mt-4">
    <form method="post" asp-action="Edit" enctype="multipart/form-data">
        <hr class="mt-0 mb-4">
        <div class="row">
            <div class="col-xl-4">
                <!-- Profile picture card-->
                <div class="card mb-4 mb-xl-0">
                    <label asp-for="Image" class="card-header">Car Picture</label>
                    <div class="card-body text-center">
                        <!-- Profile picture image-->
                        @if (Model.ImageURL == null || Model.ImageURL == "")
                        {
                            <img class="img-ticket-add" width="40%" height="70%" src="/Resources/Placeholders/TicketPicturePlaceholder.png" alt="Ticket picture">
                        }
                        else
                        {
                            <img class="img-ticket-add" width="40%" height="70%" src="@Model.ImageURL" alt="Ticket picture">
                        }
                        <!-- Profile picture help block-->
                        <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                        <!-- Profile picture upload button-->
                        <input asp-for="Image" type="file" class="btn btn-primary"></input>
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-xl-8">
                <!-- Account details card-->
                <div class="card mb-4">
                    <div class="card-header">Ticket Details</div>
                    <div class="card-body">
                        <!-- Form Group (username)-->
                        <div class="mb-3">
                            <label asp-for="Title" class="small mb-1">Title</label>
                            <input asp-for="Title" class="form-control" type="text" placeholder="Enter Ticket's title">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <!-- Form Group (password)-->
                        <div class="mb-3">
                            <label asp-for="Description" class="text-ticket-description">Description</label>
                            <input asp-for="Description" class="form-control" type="text" placeholder="Enter Ticket's Description">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="UserId" class="small mb-1" for="inputLastName">Assigned Employee Id</label>
                                <input asp-for="UserId" class="form-control" id="inputLastName" type="number" placeholder="Enter Employee's Id'">
                                <span asp-validation-for="UserId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="DeducedProblem" class="text-ticket-description">Deduced Problem</label>
                            <input asp-for="DeducedProblem" class="form-control" type="text" placeholder="Enter the Deduced Problem">
                            <span asp-validation-for="DeducedProblem" class="text-danger"></span>
                        </div>
                        <div class="row gx-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="PaidPrice" class="small mb-1" for="inputLastName">Paid Price</label>
                                <input asp-for="PaidPrice" class="form-control" id="inputLastName" type="number" min="0" step=".01" placeholder="Enter the price paid by customer'">
                                <span asp-validation-for="PaidPrice" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Save changes button-->
                        <button class="btn btn-primary" type="submit">Save changes</button>

                    </div>
                </div>
            </div>
    </form>
</div>
</div>