@{
}
@model SignInUserViewModel 

<section class="vh-100">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 text-black">
        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    <form style="width: 23rem;" method="post" asp-action="SignIn">

            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign-In</h3>

            <div data-mdb-input-init class="form-outline mb-4">
                           
                            <input asp-for="Login" class="form-control form-control-lg" type="text" placeholder="Enter Worker's username">
                            <label asp-for="Login" class="form-label">Login</label>
                            <span asp-validation-for="Login" class="text-danger"></span>
            </div>

            <div data-mdb-input-init class="form-outline mb-4">
                            <input asp-for="Password" class="form-control form-control-lg" type="password" placeholder="Enter Worker's password">
                            <label asp-for="Password" class="form-label">Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="pt-1 mb-4">
                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-info btn-lg btn-block" type="submit">Login</button>
            </div>

                        <p class="small mb-5 pb-lg-2"><a class="text-muted" href="mailto:adminOfSeriosInc@autovade.com">Forgot password?</a></p>
                        <p>Don't have an account? <a href="mailto:adminOfSeriosInc@autovade.com" class="link-info"><nobr>Ask an Admin to make you one!</nobr></a></p>

          </form>

        </div>

      </div>
      <div class="col-sm-6 px-0 d-none d-sm-block">
        <img src="/Resources/Images/LoginPageImg.png"
          alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
      </div>
    </div>
  </div>
</section>

